---
import type { ImageItem } from "../data/images";

interface Props {
  images: ImageItem[];
}

const { images } = Astro.props;
const INITIAL_DISPLAY_COUNT = 6; // 2 lignes de 3 images
---

<section class="gallery-container">
  <div class="gallery-grid" id="gallery-grid">
    {
      images.map((img, index) => (
        <article
          class={`gallery-item ${index >= INITIAL_DISPLAY_COUNT ? "hidden-item" : ""}`}
          data-index={index}
        >
          <figure class="image-wrapper">
            <img
              src={img.url}
              alt={img.alt}
              width={img.width}
              height={img.height}
              loading="lazy"
              class="gallery-img"
            />
            <div class="overlay" />
          </figure>
        </article>
      ))
    }
  </div>

  {
    images.length > INITIAL_DISPLAY_COUNT && (
      <div class="gallery-actions">
        <button id="load-more-btn" class="btn-outline">
          Voir plus
        </button>
      </div>
    )
  }

  <div id="lightbox" class="lightbox">
    <figure class="lightbox-figure">
      <img id="lightbox-img" alt="" />
      <figcaption id="lightbox-caption"></figcaption>
    </figure>

    <button class="nav prev" aria-label="Image précédente">‹</button>
    <button class="nav next" aria-label="Image suivante">›</button>
  </div>
</section>

<script>
  // Logique Client-Side (Vanilla JS léger)
  document.addEventListener("DOMContentLoaded", () => {
    const grid = document.getElementById("gallery-grid");
    const loadMoreBtn = document.getElementById("load-more-btn");
    const items = document.querySelectorAll(".gallery-item");

    // --- 1. Intersection Observer pour l'effet d'apparition ---
    const observerOptions = {
      root: null, // viewport
      rootMargin: "0px",
      threshold: 0.1, // déclenche quand 10% de l'image est visible
    };

    const revealObserver = new IntersectionObserver((entries, observer) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("revealed");
          observer.unobserve(entry.target); // Stop observing une fois chargé
        }
      });
    }, observerOptions);

    items.forEach((item) => {
      // On observe seulement les items non cachés par le bouton "voir plus"
      if (!item.classList.contains("hidden-item")) {
        revealObserver.observe(item);
      }
    });

    // --- 2. Logique "Voir Plus" ---
    if (loadMoreBtn) {
      loadMoreBtn.addEventListener("click", () => {
        const hiddenItems = document.querySelectorAll(".hidden-item");

        hiddenItems.forEach((item, index) => {
          // Petit délai pour un effet cascade sympa
          setTimeout(() => {
            item.classList.remove("hidden-item");
            revealObserver.observe(item); // On commence à l'observer
          }, index * 100);
        });

        // Cacher le bouton après chargement
        loadMoreBtn.style.display = "none";
      });
    }
  });

  // --- Lightbox ---
  document.addEventListener("DOMContentLoaded", () => {
    const lightbox = document.getElementById(
      "lightbox",
    ) as HTMLDivElement | null;
    const lightboxImg = document.getElementById(
      "lightbox-img",
    ) as HTMLImageElement | null;
    const caption = document.getElementById(
      "lightbox-caption",
    ) as HTMLParagraphElement | null;
    const prevBtn = document.querySelector(
      ".nav.prev",
    ) as HTMLButtonElement | null;
    const nextBtn = document.querySelector(
      ".nav.next",
    ) as HTMLButtonElement | null;

    if (!lightbox || !lightboxImg || !caption || !prevBtn || !nextBtn) return;

    const images = Array.from(
      document.querySelectorAll<HTMLImageElement>(".gallery-img"),
    );

    let currentIndex = 0;

    const openLightbox = (index: number) => {
      const img = images[index];
      currentIndex = index;

      lightboxImg.src = img.src;
      caption.textContent = img.alt || "";

      lightbox.classList.add("active");
      document.body.style.overflow = "hidden";
    };

    const closeLightbox = () => {
      lightbox.classList.remove("active");
      lightboxImg.src = "";
      document.body.style.overflow = "";
    };

    const showPrev = () => {
      openLightbox((currentIndex - 1 + images.length) % images.length);
    };

    const showNext = () => {
      openLightbox((currentIndex + 1) % images.length);
    };

    images.forEach((img, index) => {
      img.addEventListener("click", () => openLightbox(index));
    });

    lightbox.addEventListener("click", (e) => {
      if (e.target === lightbox) closeLightbox();
    });

    prevBtn.addEventListener("click", showPrev);
    nextBtn.addEventListener("click", showNext);

    document.addEventListener("keydown", (e: KeyboardEvent) => {
      if (!lightbox.classList.contains("active")) return;

      if (e.key === "Escape") closeLightbox();
      if (e.key === "ArrowLeft") showPrev();
      if (e.key === "ArrowRight") showNext();
    });
  });
</script>

<style>
  .gallery-container {
    max-width: 1200px;
    margin: -6vh auto 0;
    padding: 2rem 1rem;
    position: relative;
    z-index: 2;
  }

  @media (max-width: 768px) {
    .gallery-container {
      margin-top: -8vh;
    }
  }

  /* --- Grid System --- */
  .gallery-grid {
    display: grid;
    grid-template-columns: 1fr; /* Mobile: 1 colonne */
    gap: 1.5rem; /* Espace entre les images */
  }

  /* Tablette & Desktop: 3 colonnes */
  @media (min-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2px; /* Style "fine border" comme sur la maquette parfois */
    }
  }

  /* --- Item Styles --- */
  .gallery-item {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.8s ease-out,
      transform 0.8s ease-out;
    background-color: #1a1a1a; /* Placeholder visuel */
    aspect-ratio: 3/2; /* Ratio forcé pour éviter le layout shift */
    overflow: hidden;
  }

  /* Classe ajoutée par JS quand l'élément entre dans le viewport */
  .gallery-item.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Items cachés initialement */
  .hidden-item {
    display: none;
  }

  /* --- Image Styles --- */
  .image-wrapper {
    margin: 0;
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .gallery-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.7s ease;
  }

  /* Hover effect: Zoom + Couleur */
  .gallery-item:hover .gallery-img {
    transform: scale(1.05);
  }

  /* --- Button Styles --- */
  .gallery-actions {
    display: flex;
    justify-content: center;
    margin-top: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #333;
  }

  .btn-outline {
    background: transparent;
    color: #fff;
    border: 1px solid #444;
    padding: 12px 30px;
    font-family: inherit;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-outline:hover {
    border-color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  /* --- Lightbox ciné --- */
  .lightbox {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.92);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
    z-index: 9999;
  }

  .lightbox.active {
    opacity: 1;
    pointer-events: auto;
  }

  .lightbox-figure {
    max-width: 90vw;
    max-height: 90vh;
    text-align: center;
    transform: scale(0.96);
    opacity: 0;
    transition:
      transform 0.4s ease,
      opacity 0.4s ease;
  }

  .lightbox.active .lightbox-figure {
    transform: scale(1);
    opacity: 1;
  }

  #lightbox-img {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
    box-shadow: 0 40px 120px rgba(0, 0, 0, 0.8);
  }

  #lightbox-caption {
    margin-top: 1rem;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #aaa;
  }

  /* Navigation */
  .nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #aaa;
    font-size: 3rem;
    cursor: pointer;
    padding: 1rem;
    opacity: 0.6;
    transition: opacity 0.2s ease;
  }

  .nav:hover {
    opacity: 1;
  }

  .nav.prev {
    left: 2vw;
  }
  .nav.next {
    right: 2vw;
  }
</style>
